<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="roundCornerEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="hintTextColor">@color/colorTextHead</item>
        <item name="android:textColorHint">@color/colorTextHead</item>
    </style>
</resources>
